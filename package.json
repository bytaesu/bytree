{
  "name": "bytree",
  "version": "0.0.1",
  "description": "Git worktree manager that copies excluded files",
  "type": "module",
  "bin": {
    "bytree": "./bin/bytree.ts"
  },
  "files": [
    "bin",
    "src"
  ],
  "scripts": {
    "start": "bun run bin/bytree.ts",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write ."
  },
  "keywords": [
    "git",
    "worktree",
    "cli",
    "bun"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bytaesu/bytree.git"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/bun": "^1.3.8",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chalk": "^5.6.2"
  }
}
